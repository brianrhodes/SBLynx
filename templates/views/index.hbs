<!DOCTYPE html>

   <html>
   <head>
       <link rel="icon" href="/images/LynxHead.png">
       <link rel="stylesheet" href="./css/styles.css">
    </head>
    <body onload="document.getElementById('defaultOpen').click();">
        <div class="main-content">
            <title>Lynx Video App</title>
            <img class="lynxlogo" src=./images/LynxLogo.jpg><br><br>
            <div class="tab">
                <button class="tablinks" onClick="openTab(event, 'Setup')">Setup</button>
                <button class="tablinks" onClick="openTab(event, 'Operate')" id="defaultOpen">Operate</button>
                <button class="tablinks" onClick="openTab(event, 'Settings')">Settings</button>
            </div>

            <div id="Setup" class="tabcontent" style="display:block">
                <label for="layout"><b>Layout:</b></label>
                <select name="layout" id="layout" class="layout">
                    <option value="Football-1">Football-1</option>
                    <option value="Soccer-1">Soccer-1</option>
                </select><br><br>

                <b>Home Team</b><br>
                <input id="HomeName" placeholder="Name" Value="{{HomeTeam}}" class="name-input"</input><br>
                <b>Away Team</b><br>
                <input id="AwayName" placeholder="Name" Value="{{AwayTeam}}" class="name-input"></input><br><br>

                <button id="save">Save</button><br><br>
            </div>

            <div id="Operate" class="tabcontent">
                <b>{{HomeTeam}}</b><br>
                <input id="HomeScore" class="score-input" type="number" min="0" max="999" placeholder="Score" Value="{{HomeScore}}"></input>
                <button id="IncrementHomeScore" class="button-plus">+</button>
                <button id="DecrementHomeScore" class="button-minus">-</button>
                <br><br>
                <b>{{AwayTeam}}</b><br>
                <input id="AwayScore" class="score-input" type="number" min="0" max="999"  placeholder="Score" Value="{{AwayScore}}"></input>
                <button id="IncrementAwayScore" class="button-plus">+</button>
                <button id="DecrementAwayScore" class="button-minus">-</button>
                <br><br>
                <button id="send">Send</button><br><br>

                <b>Clock</b><br>
                <button id="StartTime">Start</button>
                <button id="StopTime">Stop</button>
                <p id="clockrunning" style="margin-left:2%; color: red">Clock is Stopped</p>
                <button id="SetTime">Set</button>
                <input id="ClockTime" placeholder="Time (mm:ss)" Value="{{SetTime}}"></input><br>
            </div>

            <div id="Settings" class="tabcontent">
                <b>Clock Mode:</b><br>
                <input type="radio" id="clock_countup" name="fav_language" value="up">
                <label for="clock_countup">Count Up</label><br>
                <input type="radio" id="clock_countdown" name="fav_language" value="down">
                <label for="clock_countup">Count Down</label><br>
                <script>
                    // Get the element with id="Count Up" and click on it
                    document.getElementById('clock_countdown').click();
                </script>
            </div>

            <script src="/socket.io/socket.io.js"></script>
            <script src=./js/app.js></script>
            <script>
                document.getElementById("StartTime").addEventListener("click", function() {
                    const text = document.getElementById("clockrunning")
                    text.innerHTML = "Clock is Running"
                    text.style.color = "green"
                })
                document.getElementById("StopTime").addEventListener("click", function() {
                    const text = document.getElementById("clockrunning")
                    text.innerHTML = "Clock is Stopped"
                    text.style.color = "red"
                })
                document.getElementById("IncrementHomeScore").addEventListener("click", function() {
                    document.getElementById("HomeScore").stepUp();
                })
                document.getElementById("DecrementHomeScore").addEventListener("click", function() {
                    document.getElementById("HomeScore").stepDown();
                })
                document.getElementById("IncrementAwayScore").addEventListener("click", function() {
                    document.getElementById("AwayScore").stepUp();
                })
                document.getElementById("DecrementAwayScore").addEventListener("click", function() {
                    document.getElementById("AwayScore").stepDown();
                })
            </script>
            <script>
                function openTab(evt, tabName) {
                    // Declare all variables
                    var i, tabcontent, tablinks;

                    // Get all elements with class="tabcontent" and hide them
                    tabcontent = document.getElementsByClassName("tabcontent");
                    for (i = 0; i < tabcontent.length; i++) {
                        tabcontent[i].style.display = "none";
                    }

                    // Get all elements with class="tablinks" and remove the class "active"
                    tablinks = document.getElementsByClassName("tablinks");
                    for (i = 0; i < tablinks.length; i++) {
                        tablinks[i].className = tablinks[i].className.replace(" active", "");
                    }
                    // Show the current tab, and add an "active" class to the button that opened the tab
                    document.getElementById(tabName).style.display = "block";
                    evt.currentTarget.className += " active";
                }
           </script>
         </div>
        {{>footer}}
    </body>
</html>